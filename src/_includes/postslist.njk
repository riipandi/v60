<ul reversed class="grid grid-cols-1 gap-8 md:grid-cols-2 xl:grid-cols-3">
    {% for post in postslist | reverse %}
		<div>
			<picture>
				<source
					srcset=" https://images.unsplash.com/photo-1627163439134-7a8c47e08208?&amp;fit=crop&amp;w=430&amp;h=240"
					type="image/webp"
					sizes="(max-width: 800px) 100vw, 800px"/>
				<img
					src="https://images.unsplash.com/photo-1627163439134-7a8c47e08208?&amp;fit=crop&amp;w=430&amp;h=240"
                    class="object-cover object-center w-full h-64 rounded-lg lg:h-56"
					alt="data structures &amp; algorithms"
					sizes="(max-width: 800px) 100vw, 800px"
					loading="lazy"
					decoding="sync"
					width="800"
					height="600" />
			</picture>
			<div class="mt-8">
				{% for tag in post.data.tags | filterTagList %}
					{% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
					<a href="{{ tagUrl | url }}" class="text-primary-400 uppercase tracking-wider text-sm font-medium">{{ tag }}</a>
				{% endfor %}
				<h1 class="mt-4 text-xl font-semibold text-gray-800 dark:text-white truncate">
					{% if post.data.title %}
						<a href="{{ post.url | url }}" class="hover:underline">{{ post.data.title }}</a>
					{% else %}
						<code>{{ post.url }}</code>
					{% endif %}
				</h1>
				<p class="mt-2 text-gray-500 dark:text-gray-400">
					Lorem ipsum dolor sit amet consectetur adipisicing elit. Nam est asperiores vel, ab animi
					recusandae nulla veritatis id tempore sapiente
				</p>
				<div class="flex items-center justify-between mt-4">
					<span class="text-sm font-medium text-gray-700 dark:text-gray-300">
						{{ post.data.author }}
                    </span>
					<time class="text-sm text-gray-500 dark:text-gray-400" datetime="{{ post.date | dateToFormat('yyyy-MM-dd') }}">
						{{ post.date | dateToFormat('dd LLL yyyy') }}
					</time>
				</div>
			</div>
		</div>
    {% endfor %}
</ul>

<div class="mt-14 sm:mt-20 flex items-center justify-center">
    <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
        <button
            disabled=""
            class="relative inline-flex items-center gap-1 rounded-l-md border border-gray-300 bg-white px-3 py-2 pr-4 text-sm
                font-medium text-gray-500 hover:bg-gray-50 focus:z-20 disabled:pointer-events-none disabled:opacity-40
                dark:border-gray-500 dark:bg-gray-800 dark:text-gray-300">
			<span class="i-lucide-chevron-left h-4 w-4 text-gray-400"></span>
            <span>Newer posts</span>
        </button>
        <button class="relative inline-flex items-center gap-1 rounded-r-md border border-gray-300 bg-white px-3 py-2 pl-4 text-sm
                font-medium text-gray-500 hover:bg-gray-50 focus:z-20 disabled:pointer-events-none disabled:opacity-40
                dark:border-gray-500 dark:bg-gray-800 dark:text-gray-300">
            <span>Older posts</span>
            <span class="i-lucide-chevron-right h-4 w-4 text-gray-400"></span>
        </button>
    </nav>
</div>
