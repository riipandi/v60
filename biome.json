{
    "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "noSvgWithoutTitle": "off"
            },
            "suspicious": {
                "noCommentText": "off",
                "noExplicitAny": "off"
            },
            "complexity": {
                "noBannedTypes": "off",
                "noForEach": "off",
                "useOptionalChain": "off"
            },
            "style": {
                "noUnusedTemplateLiteral": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "css": {
        "parser": {
            "allowWrongLineComments": false
        },
        "formatter": {
            "enabled": true,
            "quoteStyle": "double"
        }
    },
    "javascript": {
        "formatter": {
            "indentWidth": 2,
            "arrowParentheses": "always",
            "jsxQuoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "all",
            "quoteProperties": "asNeeded",
            "bracketSpacing": true,
            "bracketSameLine": false
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4
        }
    },
    "files": {
        "ignoreUnknown": true,
        "include": ["**/*.js", "**/*.cjs", "**/*.mjs", "**/*.css", "**/*.json"],
        "ignore": [".github", "node_modules", "_site", "_tmp"]
    }
}
